<div id="animal">
  <h1>Details for Animal {{id}}</h1>
  <ul>
    <li>Name: {{name}}</li>
  </ul>
  {{#if addingNewPrimalCut}}
    <label for"new_primal_cut_name">Name</label>
    {{input type="text" value=controller.new_name id="new_primal_cut_name"}}
    <button id="save_new_primal_cut" {{action 'saveNewPrimalCut'}}>Save new primal cut</button>
    <button id="cancel_new_primal_cut" {{action 'cancelNewPrimalCut'}}>Cancel new primal cut</button>
  {{else}}
    <button id="add_new_primal_cut" {{action 'addNewPrimalCut'}}>Add new primal cut</button>
  {{/if}}
  <ul class="primal_cuts_list">
    {{#each primalCuts}}
      <li>
        {{#link-to 'primal_cuts.show' this class="primal_cut_name"}}{{name}}{{/link-to}}
        <button {{action 'deletePrimalCut' this}} class="delete_button">Delete primal cut</button>
      </li>
    {{/each}}
  </ul>
  {{#link-to 'animals.index'}}Back to animal index{{/link-to}}
</div>
